{
  "info": {
    "name": "Player Score API",
    "description": "Collection of endpoints for managing player scores.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variables": [
    {
      "key": "host",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Add or Update Player Score",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"player_id\":\"id\",\"player_name\":\"name\",\"score\":100}" // Example data
        },
        "url": {
          "raw": "{{host}}/points/add_or_update",
          "host": [
            "{{host}}"
          ],
          "path": [
            "points",
            "add_or_update"
          ]
        }
      },
      "response": [
        {
          "code": 200,
          "body": "{\"message\":\"Player score added/updated successfully\",\"player_id\":\"id\",\"score\":100}",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      ]
    },
    {
      "name": "Get Top Players",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{host}}/points/top_players",
          "host": [
            "{{host}}"
          ],
          "path": [
            "points",
            "top_players"
          ]
        }
      },
      "response": [
        {
          "code": 200,
          "body": "[{\"player_id\":\"id1\",\"player_name\":\"name1\",\"score\":100},{\"player_id\":\"id2\",\"player_name\":\"name2\",\"score\":90}]",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      ]
    },
    {
      "name": "Get Player Points",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{host}}/points/get_points/:id",
          "host": [
            "{{host}}"
          ],
          "path": [
            "points",
            "get_points",
            ":id"
          ]
        }
      },
      "response": [
        {
          "code": 200,
          "body": "{\"player_id\":\"id\",\"player_name\":\"name\",\"score\":100}",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      ]
    }
  ]
}

